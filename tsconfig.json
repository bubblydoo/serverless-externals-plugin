{
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "build/esm",
    "declaration": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "sourceMap": false,
    "typeRoots": ["node_modules/@types", "src/types"],
    "allowJs": false
  },
  "include": ["src/**/*"]
}
